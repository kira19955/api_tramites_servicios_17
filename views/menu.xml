<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista Tree -->
    <record id="view_servicios_tree" model="ir.ui.view">
        <field name="name">api_tramites_servicios_17.servicios.tree</field>
        <field name="model">api_tramites_servicios_17.servicios</field>
        <field name="arch" type="xml">
            <tree string="Servicios">
                <field name="id_servicios"/>
                <field name="nombre"/>
                <field name="homoclave"/>
                <field name="categoria"/>
                <field name="modalidad"/>
                <field name="sujetoObligado"/>
                <field name="traFechaModificacion"/>
                <field name="ficha"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_servicios_form" model="ir.ui.view">
        <field name="name">api_tramites_servicios_17.servicios.form</field>
        <field name="model">api_tramites_servicios_17.servicios</field>
        <field name="arch" type="xml">
            <form string="Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="id_servicios"/>
                            <field name="nombre"/>
                            <field name="homoclave"/>
                            <field name="categoria"/>
                            <field name="modalidad"/>
                        </group>
                        <group>
                            <field name="sujetoObligado"/>
                            <field name="traFechaModificacion"/>
                            <field name="ficha"/>
                            <field name="ficha_id"/>
                        </group>
                        <field name="descripcionCiudadana" colspan="2"/>
                    </group>

                    <notebook>
                        <page string="Ordenamientos">
                            <field name="ordenamientos_ids">
                                <tree editable="bottom">
                                    <field name="nombre"/>
                                    <field name="articulo"/>
                                    <field name="fraccion"/>
                                    <field name="insiso"/>
                                    <field name="parrafo"/>
                                    <field name="numero"/>
                                    <field name="letra"/>
                                    <field name="otro"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

         <record id="servicios_action" model="ir.actions.act_window">
           <field name="name">servicios</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">api_tramites_servicios_17.servicios</field>
           <field name="view_mode">tree,form</field>
       </record>


       <record id="ordenamientos_action" model="ir.actions.act_window">
           <field name="name">ordenamientos</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">api_tramites_servicios_17.ordenamientos</field>
           <field name="view_mode">tree,form</field>
       </record>

    <!-- Menú principal para API SERVICIOS -->
    <menuitem id="api_servicios_menu" name="API SERVICIOS" web_icon="api_tramites_servicios_17,static/description/icon.png"/>

    <!-- Menús secundarios para cada modelo -->
    <menuitem id="servicios_api" name="Servicios" parent="api_servicios_menu" action="servicios_action" sequence="1"/>
    <menuitem id="categorias_api" name="Ordenamientos" parent="api_servicios_menu" action="ordenamientos_action" sequence="2"/>
    <menuitem id="settings_api" name="Settings" parent="api_servicios_menu" action="action_settings" sequence="3"/>

    </data>
</odoo>